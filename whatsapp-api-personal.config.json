{
  "apiEndpoint": "YOUR_PERSONAL_WHATSAPP_API_ENDPOINT",
  "apiKey": "YOUR_PERSONAL_WHATSAPP_API_KEY",
  "sender": "YOUR_PERSONAL_WHATSAPP_NUMBER",
  "messageFormat": {
    "text": "Dear {{customerName}},\n\nThank you for your business! Here is your invoice #{{invoiceNumber}}.\n\nPlease find the attached PDF for your records.\n\nBest regards,\n{{businessName}}",
    "caption": "Invoice #{{invoiceNumber}}",
    "footer": "Generated by QuickBill"
  },
  "messageTypes": {
    "document": {
      "type": "document",
      "document": {
        "link": "{{pdfUrl}}"
      },
      "caption": "{{caption}}"
    },
    "template": {
      "name": "invoice_notification",
      "language": {
        "code": "en"
      },
      "components": [
        {
          "type": "header",
          "parameters": [
            {
              "type": "document",
              "document": {
                "link": "{{pdfUrl}}"
              }
            }
          ]
        },
        {
          "type": "body",
          "parameters": [
            {
              "type": "text",
              "text": "{{customerName}}"
            },
            {
              "type": "text",
              "text": "{{invoiceNumber}}"
            }
          ]
        },
        {
          "type": "footer",
          "text": "{{footer}}"
        }
      ]
    }
  }
}